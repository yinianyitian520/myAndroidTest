<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_bg_color" >


    <RelativeLayout

        android:background="@color/main_nav_text_bg_normol"
        android:layout_width="match_parent"
        android:layout_height="59.5dp">

        <ImageView
            android:id="@+id/setback"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/webview_nav"
            />


        <ImageView
            android:id="@+id/shake"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/webview_nav_right"/>
    </RelativeLayout>

        <ScrollView
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10.0dip" >

                    <LinearLayout
                        android:id="@+id/night_mode"
                        style="@style/setting_item_head"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/night_mode_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_night_mode" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <CheckBox
                            android:id="@+id/checkbox_night_mode"
                            style="@style/setting_checkbox" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/setting_list_mode"
                        style="@style/setting_item_head" >

                        <TextView
                            android:id="@+id/list_mode_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_list_mode" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <CheckBox
                            android:id="@+id/checkbox_list_mode"
                            style="@style/setting_checkbox" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/setting_font_size"
                        style="@style/setting_item_center" >

                        <TextView
                            android:id="@+id/font_size_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_font_size" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/font_size"
                            style="@style/setting_alt_text" />

                        <ImageView
                            android:id="@+id/font_size_arrow"
                            style="@style/setting_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/setting_list_comment"
                        style="@style/setting_item_center" >

                        <TextView
                            android:id="@+id/list_comment_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_list_comment" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dip"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/list_comment_mode"
                            style="@style/setting_alt_text" />

                        <ImageView
                            android:id="@+id/list_comment_arrow"
                            style="@style/setting_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/setting_refresh_list"
                        style="@style/setting_item_center"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/refresh_list_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_refresh_list" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/refresh_list_mode"
                            style="@style/setting_alt_text" />

                        <ImageView
                            android:id="@+id/refresh_list_arrow"
                            style="@style/setting_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/setting_load_image"
                        style="@style/setting_item_center" >

                        <TextView
                            android:id="@+id/load_image_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_load_image" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/load_image_mode"
                            style="@style/setting_alt_text" />

                        <ImageView
                            android:id="@+id/load_image_arrow"
                            style="@style/setting_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/clear"
                        style="@style/setting_item_end" >

                        <TextView
                            android:id="@+id/clear_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_clear" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/cache_size"
                            style="@style/setting_alt_text"
                            android:singleLine="true" />

                        <ImageView
                            android:id="@+id/clear_arrow"
                            style="@style/setting_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/notify"
                        style="@style/setting_item_head"
                        android:layout_marginTop="15dp" >

                        <TextView
                            android:id="@+id/notify_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_notify" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <CheckBox
                            android:id="@+id/checkbox_notify"
                            style="@style/setting_checkbox" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/interactive"
                        style="@style/setting_item_center" >

                        <TextView
                            android:id="@+id/interactive_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_interactive" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <CheckBox
                            android:id="@+id/checkbox_interactive"
                            style="@style/setting_checkbox" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/use_swipe"
                        style="@style/setting_item_center" >

                        <TextView
                            android:id="@+id/use_swip_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_use_swipe" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <CheckBox
                            android:id="@+id/checkbox_use_swipe"
                            style="@style/setting_checkbox" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/close_shake_hand"
                        style="@style/setting_item_center"
                        android:visibility="gone" >

                        <TextView
                            style="@style/setting_item_text"
                            android:text="@string/setting_close_shake_hand" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <CheckBox
                            android:id="@+id/checkbox_close_shake_hand"
                            style="@style/setting_checkbox" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/share_when_favor"
                        style="@style/setting_item_center" >

                        <TextView
                            android:id="@+id/share_when_favor_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_share_when_favor" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <CheckBox
                            android:id="@+id/checkbox_share_when_favor"
                            style="@style/setting_checkbox" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/share_when_diggbury"
                        style="@style/setting_item_end" >

                        <TextView
                            android:id="@+id/share_when_diggbury_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_share_when_diggbury" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <CheckBox
                            android:id="@+id/checkbox_share_when_diggbury"
                            style="@style/setting_checkbox" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/update"
                        style="@style/setting_item_center" >

                        <TextView
                            android:id="@+id/update_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_update" />

                        <ImageView
                            android:id="@+id/version_new"
                            style="@style/setting_hint_new"
                            android:visibility="gone" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/current_version"
                            style="@style/setting_alt_text" />

                        <ImageView
                            android:id="@+id/update_arrow"
                            style="@style/setting_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/recommendation"
                        style="@style/setting_item_head"
                        android:layout_marginTop="15dip"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/recommendation_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_recommend" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/recommendation_arrow"
                            style="@style/setting_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/switch_domain"
                        style="@style/setting_item_center"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/switch_domain_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_switch_domain" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <CheckBox
                            android:id="@+id/checkbox_switch_domain"
                            style="@style/setting_checkbox" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/use_help"
                        style="@style/setting_item_end" >

                        <TextView
                            android:id="@+id/use_help_text"
                            style="@style/setting_item_text"
                            android:text="@string/setting_use_help" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/use_help_arrow"
                            style="@style/setting_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/copyright"
                    style="@style/setting_copyright" />

                <TextView
                    android:id="@+id/release_info"
                    style="@style/setting_release_info" />
            </LinearLayout>
        </ScrollView>

</RelativeLayout>